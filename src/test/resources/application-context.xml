<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="craftCharacter" class="evercraftJava8.CraftCharacter">
		<constructor-arg ref="plateArmor"/>
		<constructor-arg ref="startingHealth"/>
	</bean>
	<bean id="spock" class="evercraftJava8.Spock">
		<constructor-arg ref="plateArmor"/>
		<constructor-arg ref="startingHealth"/>
		<constructor-arg ref="spockAbilities"/>
	</bean>
	
	<bean id="plateArmor" class="evercraftJava8.PlateArmor"/>
	<bean id="rollingDice" class="evercraftJava8.RollingDice"/>
	<bean id="startingHealth" class="evercraftJava8.Health"/>
	<bean id="abilities" class="evercraftJava8.Abilities"/>
	
	<bean id="spockAbilities" class="evercraftJava8.Abilities">
		<property name="intelligence" value="20" />
		<property name="charisma" value="2" />
	</bean>

</beans>